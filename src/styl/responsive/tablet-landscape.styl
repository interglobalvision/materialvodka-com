@media screen and (min-width: 1024px)

  $header-height = 41px
  $footer-height = 41px

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 14px
  $font-size-extra = 48px
  $font-size-large = 36px
  $font-size-mid = 24px
  $font-size-small = 13px
  $font-size-tiny = 10px

  grid-maker(100%, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

  .desktop-only
    display: initial !important

  .content-wrapper
    min-height: calc('100vh - ' + ($footer-height + $header-height))

  // ******************************************************

  // FORMS

  button
    padding: 0 $margin-tiny
    margin: 0 $margin-tiny

  input
    margin: 0 $margin-micro

  // ******************************************************

  // HEADER

  #header-spacer
    height: $header-height

  // ******************************************************

  // CUBE

  .loading

    #transition-cube
      height: calc('100vh - ' + $header-height)

    .transition-cube-side
      height: calc('100vh - ' + $header-height)

  // ******************************************************

  // PRODUCT
