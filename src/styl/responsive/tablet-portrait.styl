@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 12px
  $font-size-extra = 36px
  $font-size-large = 28px
  $font-size-mid = 21px
  $font-size-small = 12px
  $font-size-tiny = 9px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(100%, $gutter, m)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

  .mobile-only
    display: none !important

  .grid-item-square
    min-height: 50vw

  .mobile-min-height
    min-height: 0

  // ******************************************************

  // FORMS

  button
    padding: 0 $margin-tiny
    margin: 0 $margin-tiny

  // ******************************************************

  // HEADER

  #mobile-nav-trigger-holder
    display: none

  #desktop-nav
    display: block

  #mobile-nav
    transform: translateX(100vw)
    &.active
      transform: translateX(100vw)

  #header-spacer-desktop
    display: block

  #header-spacer-mobile
    display: none

  // ******************************************************

  // VIDEOS

  .height-m-16vw
    height: calc('50vw / 3')
    max-height: calc('50vw / 3')

  .height-m-28vw
    height: 28vw
    max-height: 28vw

  // ******************************************************

  // MAILING LIST

  #mailinglist-full-title
    text-align: right
