@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 14px
  $font-size-extra = 48px
  $font-size-large = 36px
  $font-size-mid = 24px
  $font-size-small = 13px
  $font-size-tiny = 10px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker(100%, $gutter, m)

  font-sizes($font-size-basic)

  .mobile-only
    display: none !important

  // ******************************************************

  // HEADER

  #mobile-menu-trigger-holder
    display: none

  #desktop-nav
    display: block

  #mobile-nav
    transform: translateX(100vw)
    &.active
      transform: translateX(100vw)

  // ******************************************************

  // VIDEOS

  .covervid-m-6
    height: calc('50vw / 3')
    max-height: calc('50vw / 3')
