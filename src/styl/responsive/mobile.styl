$header-height = 30px

$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 12px
$font-size-extra = 48px
$font-size-large = 36px
$font-size-mid = 24px
$font-size-small = 11px
$font-size-tiny = 8px

grid-maker(100%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

.grid-item-square
  min-height: 100vw

#main-container
  transition: opacity 1000ms, filter 300ms
  filter: blur(0)
  transform-style: preserve-3d
  &.hide
    opacity: 0

.main-content
  min-height: 100vh

.background-cover
  background-size: cover
  background-position: center

.background-repeat-x
  background-size: auto 100%
  background-repeat: repeat-x

.mobile-min-height
  min-height: 100vw

.text-max-width
  p, span, li
    max-width: 25em

// ******************************************************

// FORMS

button
  background-color: transparent
  color: $color-white
  border: none
  padding: 0
  appearance: none
  font-family: $font-medium
  font-weight: 400
  padding: 0 $margin-tiny
  cursor: pointer
  &.button-no-padding
    padding: 0

input
  background-color: $color-black
  color: $color-white
  padding: 1rem
  text-align: center
  border: 1px solid $color-white
  font-weight: 300
  font-family: $font-sans
  margin: 0 $margin-micro
  &::placeholder
    color: $color-white
  &:focus
    outline: $color-white
    &::placeholder
      color: transparent

input::-webkit-inner-spin-button
  -webkit-appearance: none
  margin: 0

// ******************************************************

// CUBE

.cube-front, .cube-left, .cube-right
  position:absolute
  top:0
  bottom:0
  left:0
  right:0
  backface-visibility: hidden
  background-color: $color-black

.cube-left, .cube-right
  visibility: hidden

.cube-front
  visibility: visible

.cube-holder
  position:relative
  perspective: 0
  z-index: 0
  &.ready
    .cube-left, .cube-right
      visibility: visible

.cube-active
  z-index: 100

// ******************************************************

// HEADER

#header
  position: fixed
  bottom: 0
  left: 0
  background-color: $color-black
  width: 100%
  transition: opacity 500ms ease-in-out
  z-index: 1200

  &.bottom
    position: absolute

body.mobile-active
  #mobile-nav
    transform: translateY(0)
  #mobile-nav-trigger-borders
    height: 1px
    border-width: .5px 0

#logo
  fill: $color-white
  height: 1.4em

#desktop-nav
  display: none

#mobile-nav
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100vh
  z-index: 1100
  background-color: $color-black
  transform: translateY(100vh)
  transition: transform 300ms ease-in

#mobile-nav-list
  min-height: 100vh
  li
    width: 50%
    text-align: center

#mobile-nav-trigger
  height: 20px

#mobile-nav-trigger-borders
  border-width: 1px 0
  border-color: $color-white
  border-style: solid
  height: 8px
  width: 17px
  transition: height 300ms ease-in

#header-spacer
  height: $header-height

// ******************************************************

// FOOTER

#footer
  background-color: $color-white
  color: $color-black

.social-icon
  height: 1.5em
  margin-left: .5em

// ******************************************************

// VIDEOS

.covervid-wrapper
  position: relative

.covervid-video
  visibility: hidden
  &.show
    visibility: visible

.height-s-33vw
  height: calc('100vw / 3')
  max-height: calc('100vw / 3')

// ******************************************************

// FRONTPAGE

#bottle-sprite
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden
  top: 0
  left: 0
  background-image: url('../img/bottle-sprite.png')
  background-position: 0% 0
  background-repeat: no-repeat
  background-size: 6000% 100%
  mix-blend-mode: difference

// ******************************************************

// RECIPES

.recipe-item
  min-height: 600px
  height: 33vw
  .cube-left
    cursor: pointer

// ******************************************************

// AGE CHECKER FORM

#age-overlay
  opacity: 0
  pointer-events: none
  position: fixed
  width: 100vw
  height: 100vh
  top:0
  left:0
  z-index: 1000

#age-checker-form
  background-color: $color-black
  input
    min-width: 4em

input#birthday-year
  min-width: 5em

body
  &.age-check
    #main-container
      filter: blur(50px)
    #age-overlay
      opacity: 1
      pointer-events: auto

.age-form-error
  color: $color-red

// TRANSITION-CUBE
.active
  z-index: 9999
.next
  display: none

#transition-cube
  transition: transform 250ms ease-in-out

.transition-cube-side
  background-color: black

.loading

  #transition-cube
    backface-visibility: hidden
    background-color: #000
    visibility: visible
    perspective: none
    position: relative
    z-index: 0
    height: calc('100vh - ' + $header-height)

  .transition-cube-side
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    visibility: visible
    min-width: 100vw
    height: calc('100vh - ' + $header-height)
    transition: transform 500ms ease-in-out
    transform: rotateY(-90deg) translateZ(50vw)
    overflow-y: hidden

  .transition-content-absolute
    position: absolute
    width: 100%

  .next
    display: block
    transform: rotateY(90deg) translateZ(50vw)

  .cube-left, .cube-right
    transition: none !important
    transform: rotateY(0deg) translateZ(0px) !important
    visibility: hidden !important
    &.cube-front
      visibility: visible !important

.transition-cube-side.active
  transform: rotateY(0deg) translateZ(50vw)
